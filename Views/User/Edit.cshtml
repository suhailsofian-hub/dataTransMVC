@using AuthProject.ViewModel
@model UserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container shadow p-5">
    <div class="row  pb-2">
        <h1>Edit User</h1>
    </div>


    <form method="post" class="form-floating">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Id" readonly="readonly"/>
            <label asp-for="Id">User Id</label>            
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Email" placeholder="Enter Email" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="alert-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name" />
            <label asp-for="Name">Name</label>
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Password" placeholder="Enter Password" />
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="alert-danger"></span>
        </div>
        

        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="ConfirmPassword" placeholder="ConfirmPassword" />
            <label asp-for="ConfirmPassword">ConfirmPassword</label>
            <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
        </div>
        

        <button type="submit" class="btn btn-success">Update</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-primary">Back To List</a>
    </form>
</div>